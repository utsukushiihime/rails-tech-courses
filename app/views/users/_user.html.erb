<div class="card">
  <div class="card-header">
    <div class="fa fa-user"></div>
    <%= user.email %>
  </div>
  <div class="card-footer">
    Signed up
    <%= time_ago_in_words(user.created_at) %>
    ago
  </div>
  <div class="card-footer">
    <div class="row small">
      <span class="font-weight-bold"> <%= 'sign_in_count'.humanize %></span>:
      <%= user.sign_in_count %>
    </div>
    <div class="row small">
      <span class="font-weight-bold"> <%= 'current_sign_in_at'.humanize %></span>:
      <%= user.current_sign_in_at %>
    </div>
    <div class="row small">
      <span class="font-weight-bold"> <%= 'last_sign_in_at'.humanize %></span>:
      <%= user.last_sign_in_at %>
    </div>
    <div class="row small">
      <span class="font-weight-bold"> <%= 'current_sign_in_ip'.humanize %></span>:
      <%= user.current_sign_in_ip %>
    </div>
    <div class="row small">
      <span class="font-weight-bold"> <%= 'last_sign_in_ip'.humanize %></span>:
      <%= user.last_sign_in_ip %>
    </div>
  </div>
  <div class="card-footer">
    Confirmed email?
    <% if user.confirmed_at.present? %>
      <div class="badge badge-success">Yes</div>
    <% else %>
      <div class="badge badge-danger">No</div>
    <% end %>
  </div>

</div>
