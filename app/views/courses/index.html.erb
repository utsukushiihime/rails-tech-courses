<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.user %></td>
        <td><%= link_to 'Show', course, class: "btn btn-primary btn-sm text-white" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-warning btn-sm text-white" %></td>
        <td><%= link_to 'Delete', course, method: :delete, class: "btn btn-danger btn-sm text-white", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-primary text-white" %>
